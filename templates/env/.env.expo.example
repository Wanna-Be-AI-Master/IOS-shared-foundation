# ============================================
# Expo / React Native 用環境変数テンプレート
# ============================================
#
# 注意: EXPO_PUBLIC_ プレフィックスが必要
# これがないとクライアントで読み込めない
#

# --------------------------------------------
# Supabase設定
# --------------------------------------------

EXPO_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# --------------------------------------------
# RevenueCat設定
# --------------------------------------------

EXPO_PUBLIC_REVENUECAT_API_KEY=appl_xxxxxxxxxxxxxxxxxx

# --------------------------------------------
# アプリ環境
# --------------------------------------------

EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_API_URL=https://api.yourapp.com

# --------------------------------------------
# 機能フラグ
# --------------------------------------------

EXPO_PUBLIC_FEATURE_PREMIUM=true
EXPO_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_FEATURE_ANALYTICS=false

# --------------------------------------------
# 開発用
# --------------------------------------------

# Reactotron（デバッグツール）
# EXPO_PUBLIC_REACTOTRON_HOST=localhost
